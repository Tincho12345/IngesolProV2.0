@{
    Layout = "_Layout";
    ViewData["Title"] = "Material";
    ViewData["Titles"] = "Materiales";
    var ruta = ViewContext.RouteData.Values["controller"]?.ToString() ?? "Materiales";
}
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery AntiforgeryService

<div class="container-fluid py-2">
    <div class="row mb-1 mb-md-2"></div>

    <div class="row">
        <div class="col-12">
            <!-- Spinner moderno, oculto por defecto -->
            <div class="table-responsive position-relative">
                <!-- 🔒 BLOQUEADOR DE TABLA -->
                <div id="table-blocker" class="table-blocker d-none">
                    <div class="spinner-border text-primary" role="status"></div>
                </div>
                <table id="tblList" class="table table-striped table-bordered nowrap" style="width:100%">
                    <thead class="table-dark">
                        <tr id="tableHeaders">
                            <th>@ViewData["Titles"]</th>
                            <!-- Se agregan dinámicamente más columnas desde JS -->
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Crear/Editar Material -->
<div class="modal fade" id="createEditModal" tabindex="-1" aria-labelledby="createEditModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="formCrearEditar" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" id="createEditEntityId" name="id" />
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createEditModalLabel">Crear/Editar @ViewData["Title"]</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body custom-scroll-body" id="dynamicFormFields">
                    <!-- Campos dinámicos generados por JS -->
                </div>
                @await Html.PartialAsync("_ModalFooter", "success")
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        window._ruta = '@ruta';
        window._mostrarColumnasDefault = false;
        window._viewTitle = '@ViewData["Title"]';
        window._viewTitles = '@ViewData["Titles"]';
        window._viewIcon = 'fas fa-hard-hat';

        // ⚙️ Columnas con flags de visibilidad y tipos
        window._columnasPersonalizadas = [
            { data: "nombre", label: "Nombre", type: "string", includeInForm: true, includeInTable: true, width: "15%" },
            { data:"codigoBarra", label:"Qr", type:"string", includeInTable:true,  width: "5.2%" },
            { data: "tipoId", label: "Tipo:", type: "search-youtube", includeInForm: true, includeInTable: false },
            { data: "unidadMedidaId", label: "Unidad de Medida:", type: "search-youtube", includeInForm: true, includeInTable: false },
            { data: "unidadNombre", label: "UM", type: "string", includeInForm: false, includeInTable: true, required: false },
            { data: "familiaNombre", label: "Familia", type: "string", includeInForm: false, includeInTable: true, width: "10%" },
            { data: "claseNombre", label: "Clase", type: "string", includeInForm: false, includeInTable: true, width: "10%" },
            { data: "tipoNombre", label: "Tipo", type: "string", includeInForm: false, includeInTable: true, width: "10%" },
            { data: "pesoUnitario", label: "Peso Unitario:", type: "decimal", includeInForm: true, includeInTable: true },
            { data: "imagePath", label: "Imagen", type: "image", includeInForm: false, includeInTable: true, className: "text-center", width: "10%" },
            { data:"precioUnitario", label:"Precio Unitario", type:"decimal", includeInForm:true, includeInTable:true, render:data=>data!=null?data.toLocaleString("es-AR",{style:"currency",currency:"ARS"}):"", className:"text-end fuente-grande" },
            { data: "image", label: "Cargar Imagen", type: "file", includeInForm: true, includeInTable: false, required: false },
            { data: "isFavorite", label: "Favorito", type: "boolean", includeInForm: false, includeInTable: true, required: false },
            { data: "descripcion", label: "Observaciones", type: "string", includeInForm: true, includeInTable: true, className: "col-observaciones", width: "35%", required: false }
        ];

    </script>
    <!-- 🚀 Importa el script principal que inicia toda la lógica -->
    <script type="module" src="/js/main.js"></script>
}
