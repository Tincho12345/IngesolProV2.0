@{
    Layout = "_Layout";
    Layout = "_Layout";
    ViewData["Title"] = "Proyecto";
    ViewData["Titles"] = "Proyectos";
    var ruta = ViewContext.RouteData.Values["controller"]?.ToString();
}

@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

<div class="container-fluid py-2">
    <div class="row mb-1 mb-md-2"></div>

    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table id="tblList" class="table table-striped table-bordered nowrap" style="width:100%">
                    <thead class="table-dark"> <tr id="tableHeaders"> </tr> </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Crear/Editar Área Técnica -->
<div class="modal fade" id="createEditModal" tabindex="-1" aria-labelledby="createEditModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="formCrearEditar">
            @Html.AntiForgeryToken() <!-- 🔐 MOVIDO AQUÍ -->
            <input type="hidden" id="createEditEntityId" name="id" />
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createEditModalLabel">Crear/Editar @ViewData["Title"]</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body" id="dynamicFormFields">
                    <!-- Campos dinámicos -->
                </div>
                @await Html.PartialAsync("_ModalFooter", "success")
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // 🌐 Ruta usada en JS
        window._ruta = '@ruta';

        // ⚙️ Mostrar columnas default
        window._mostrarColumnasDefault = false;
        window._viewTitle = '@ViewData["Title"]';
        window._viewTitles = '@ViewData["Titles"]';
        window._viewIcon = "fas fa-project-diagram";

        // 📋 Columnas para formulario y tabla (AJUSTADAS para Proyectos)
        window._columnasPersonalizadas = [
            { data: 'plantaNombre', label: 'Planta Industrial', type: 'string', includeInForm: false, includeInTable: true, width: '15%' },
            { data: 'areaNombre', label: 'Área', type: 'string', includeInForm: false, includeInTable: true, width: '12%' },
            { data: 'areaId', label: 'Área', type: 'search-youtube', includeInForm: true, includeInTable: false },
            { data: 'descripcion', label: 'Descripción Proyecto', type: 'string', includeInForm: true, includeInTable: true, width: '30%', className: 'descripcion-wrap' },
            { data: 'ultimoNumeroOrden', label: 'Orden Nº', type: 'number', includeInForm: false, align: 'center', includeInTable: true, width: '8%' },
            { data: 'ultimaDescripcionOrden', label: 'Descripción Órden', type: 'string', includeInForm: false, includeInTable: true, width: '20%', className: 'descripcion-wrap' },
            { data: 'totalPresupuestos', label: 'Total Presupuesto', type: 'decimal', includeInForm: false, includeInTable: true, width: '15%', render: data => data != null ? data.toLocaleString('es-AR', { style: 'currency', currency: 'ARS' }) : '', className: 'text-end fuente-grande' }
        ];
    </script>

    <!-- 🚀 JS principal (usa window._columnasPersonalizadas y otros valores) -->
    <script type="module" src="/js/main.js"></script>

    <!-- ===== CSS LOCAL: solo para la página Proyectos (no afecta otras vistas) ===== -->
    <style>
        /* Scoped to this page only */
        #proyectosPage .table-responsive {
            overflow-x: hidden; /* evita scroll horizontal solo aquí */
        }

        #proyectosPage #tblList {
            table-layout: fixed !important; /* distribuye anchos respetando widths */
            width: 100% !important;
        }

        /* Permitir que las descripciones hagan wrap */
        #proyectosPage .descripcion-wrap {
            white-space: normal !important;
            word-wrap: break-word !important;
            overflow-wrap: break-word !important;
            word-break: break-word !important;
        }

        /* Asegurar que las celdas alineen arriba para no tener filas desproporcionadas */
        #proyectosPage #tblList td,
        #proyectosPage #tblList th {
            vertical-align: top !important;
        }

    </style>
}