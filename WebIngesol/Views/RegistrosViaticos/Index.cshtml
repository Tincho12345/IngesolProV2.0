@{
    Layout = "_Layout";
    ViewData["Title"] = "Registro Viático";
    ViewData["Titles"] = "Registros Viáticos";
    var ruta = ViewContext.RouteData.Values["controller"]?.ToString() ?? "Viaticos";
}
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery AntiforgeryService

<div class="container-fluid py-2">
    <div class="row mb-1 mb-md-2"></div>

    <div class="row">
        <div class="col-12">
            <!-- Spinner moderno, oculto por defecto -->
            <div id="spinnerCarga" class="text-center py-4" style="display: none;">
                <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
            </div>

            <div class="table-responsive">
                <table id="tblList" class="table table-striped table-bordered nowrap" style="width:100%">
                    <thead class="table-dark">
                        <tr id="tableHeaders">
                            <th>@ViewData["Titles"]</th>
                            <!-- Se agregan dinámicamente más columnas desde JS -->
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>

</div>

<!-- Modal Crear/Editar Registro Viático -->
<div class="modal fade" id="createEditModal" tabindex="-1" aria-labelledby="createEditModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="formCrearEditar" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input type="hidden" id="createEditEntityId" name="id" />
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createEditModalLabel">Crear/Editar @ViewData["Title"]</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body custom-scroll-body" id="dynamicFormFields">
                    <!-- Campos dinámicos generados por JS -->
                </div>
                @await Html.PartialAsync("_ModalFooter", "success")
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        window._ruta = '@ruta';
        window._mostrarColumnasDefault = false;
        window._viewTitle = '@ViewData["Title"]';
        window._viewTitles = '@ViewData["Titles"]';
        window._viewIcon = 'fas fa-money-bill';

        window._columnasPersonalizadas = [
            { data: 'empleadoNombre', label: 'Nombre Empleado', type: 'string', includeInForm: false, includeInTable: true },
            { data: 'valorViaticoId', label: 'Tipo:', type: 'search-youtube', includeInForm: true, includeInTable: false },
            { data: 'tipoViaticoNombre', label: 'Tipo Viático', type: 'string', includeInForm: false, includeInTable: true },
            { data: 'presupuestoId', label: 'Presupuesto:', type: 'search-youtube', includeInForm: true, includeInTable: false },
            { data: 'presupuestoNombre', label: 'Presupuesto', type: 'string', includeInForm: false, includeInTable: true },
            { data: 'fecha', label: 'Fecha', type: 'date', includeInForm: true, includeInTable: true },
            {
                data: 'valor',
                label: 'Valor Viático',
                type: 'number',            // 👈 formulario: decimal
                includeInForm: false,
                includeInTable: true,
                render: data => data != null
                    ? data.toLocaleString('es-AR', {
                        style: 'currency',
                        currency: 'ARS'
                    })
                    : '',
                className: 'text-end fuente-grande'
            }
        ];

    </script>

    <script type="module" src="/js/main.js"></script>
}

