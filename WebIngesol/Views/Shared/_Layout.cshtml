    <!-- 🔥 ACTIVE NAV FUNCIONANDO (CLICK + RUTA ACTUAL + DROPDOWN) -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const currentUrl = window.location.pathname.toLowerCase();

            // limpiar active previo
            document.querySelectorAll("#header .nav-link, #header .dropdown-item")
                .forEach(el => el.classList.remove("active"));

            // marcar activo por URL
            document.querySelectorAll("#header a[href]").forEach(link => {
                const href = link.getAttribute("href");
                if (!href || href === "#" || href.startsWith("javascript")) return;

                if (currentUrl === href.toLowerCase()) {
                    link.classList.add("active");

                    // si está dentro de dropdown, activar el padre
                    const dropdown = link.closest(".dropdown");
                    if (dropdown) {
                        const parentLink = dropdown.querySelector(".nav-link.dropdown-toggle");
                        if (parentLink) parentLink.classList.add("active");
                    }
                }
            });

            // marcar activo al click (UX inmediata)
            document.querySelectorAll("#header .nav-link, #header .dropdown-item")
                .forEach(link => {
                    link.addEventListener("click", function () {

                        document.querySelectorAll("#header .nav-link, #header .dropdown-item")
                            .forEach(l => l.classList.remove("active"));

                        this.classList.add("active");

                        const dropdown = this.closest(".dropdown");
                        if (dropdown) {
                            const parentLink = dropdown.querySelector(".nav-link.dropdown-toggle");
                            if (parentLink) parentLink.classList.add("active");
                        }
                    });
                });
        });
    </script>

