@{
    Layout = "_Layout";
    ViewData["Title"] = "Usuario";
    ViewData["Titles"] = "Usuarios";
    var ruta = ViewContext.RouteData.Values["controller"]?.ToString();
}

@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

<div class="container-fluid py-2">
    <div class="row mb-1 mb-md-2"></div>

    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table id="tblList" class="table table-striped table-bordered nowrap" style="width:100%">
                    <thead class="table-dark">
                        <tr id="tableHeaders">
                            <th>Cod Num.</th>
                            <!-- Se agregan dinámicamente más columnas desde JS -->
                            <th>Fecha Creado</th>
                            <th>Creado Por</th>
                            <th>Fecha Modif.</th>
                            <th>Editado Por</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Crear/Editar Área Técnica -->
<div class="modal fade" id="createEditModal" tabindex="-1" aria-labelledby="createEditModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="formCrearEditar">
            @Html.AntiForgeryToken()
            <input type="hidden" id="createEditEntityId" name="id" />
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createEditModalLabel">Crear/Editar @ViewData["Title"]</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body" id="dynamicFormFields">
                    <!-- Campos dinámicos -->
                </div>
                @await Html.PartialAsync("_ModalFooter", "success")
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        window._mostrarBotonContactos = false;
        window._ruta = '@ruta';
        window._mostrarColumnasDefault = false;
        window._viewTitle = '@ViewData["Title"]';
        window._viewTitles = '@ViewData["Titles"]';

        window._columnasPersonalizadas = [
        { data: 'id', label: 'Guid Id', type: 'string', includeInForm: false, includeInTable: false },
        { data: 'userName', label: 'Usuario', type: 'string', includeInForm: true, includeInTable: true, required: true },
        { data: 'email', label: 'Correo Electrónico', type: 'email', includeInForm: true, includeInTable: true, required: true },
        { data: 'firstName', label: 'Nombre', type: 'string', includeInForm: true, includeInTable: true, required: true },
        { data: 'lastName', label: 'Apellido', type: 'string', includeInForm: true, includeInTable: true, required: true },
        { data: 'rolNombre', label: 'Rol', type: 'string', includeInForm: false, includeInTable: true },
        { data: 'rolId', label: 'Rol', type: 'search-youtube', includeInForm: true, includeInTable: false, required: false },
        // Mostrar imagen en la tabla (no en el formulario)
            { data: 'imagePath', label: 'Imagen', type: 'image', includeInForm: false, includeInTable: true, className: 'text-center' },
        ];
    </script>
    <!-- 🚀 Importa el script principal que inicia toda la lógica -->
    <script type="module" src="/js/main.js"></script>
}