@{
    Layout = "_Layout";
    ViewData["Title"] = "Valor Viático";
    ViewData["Titles"] = "Valores Viáticos";
    var ruta = ViewContext.RouteData.Values["controller"]?.ToString();
}

@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery

<div class="container-fluid py-2">
    <div class="row mb-1 mb-md-2"></div>

    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table id="tblList" class="table table-striped table-bordered nowrap" style="width:100%">
                    <thead class="table-dark"> <tr id="tableHeaders"> </tr> </thead>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Crear/Editar Área Técnica -->
<div class="modal fade" id="createEditModal" tabindex="-1" aria-labelledby="createEditModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="formCrearEditar">
            @Html.AntiForgeryToken() <!-- 🔐 MOVIDO AQUÍ -->
            <input type="hidden" id="createEditEntityId" name="id" />
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="createEditModalLabel">Crear/Editar @ViewData["Title"]</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body" id="dynamicFormFields">
                    <!-- Campos dinámicos -->
                </div>
                @await Html.PartialAsync("_ModalFooter", "success")
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        window._ruta = '@ruta';
        window._mostrarColumnasDefault = false;
        window._viewTitle = '@ViewData["Title"]';
        window._viewTitles = '@ViewData["Titles"]';
        window._viewIcon = 'fas fa-map';

        window._columnasPersonalizadas = [

            // Tipo de Viático (selector)
            {
                data: 'tipoViaticoId',
                label: 'Tipo de Viático:',
                type: 'search-youtube',
                includeInForm: true,
                includeInTable: false
            },

            // Fecha Desde (vigencia)
            {
                data: 'fechaDesde',
                label: 'Fecha Desde',
                type: 'date',                   // 👈 formulario: date
                includeInForm: true,
                includeInTable: true,
                render: data => data
                    ? new Date(data).toLocaleDateString('es-AR')   // 👈 tabla: dd/mm/yyyy
                    : ''
            },

            // Nombre del tipo de viático
            {
                data: 'tipoViaticoNombre',
                label: 'Tipo de Viático',
                type: 'string',
                includeInForm: false,
                includeInTable: true
            },

            // Observaciones del tipo de viático
            {
                data: 'tipoViaticoObservaciones',
                label: 'Observaciones',
                type: 'string',
                includeInForm: false,
                includeInTable: true
            },

            // Valor del viático (decimal en form, moneda en tabla)
            {
                data: 'valor',
                label: 'Valor Viático',
                type: 'number',            // 👈 formulario: decimal
                includeInForm: true,
                includeInTable: true,
                render: data => data != null
                    ? data.toLocaleString('es-AR', {
                        style: 'currency',
                        currency: 'ARS'
                    })
                    : '',
                className: 'text-end fuente-grande'
            }
        ];
    </script>

    <script type="module" src="/js/main.js"></script>
}

